<!-- https://mujoco.readthedocs.io/en/latest/overview.html?highlight=hello.xml#examples -->
<mujoco>
  <compiler meshdir="meshes"/>
  <asset>
    <mesh name="Brazo1" file="Brazo1C.STL"/>
    <mesh name="Brazop" file="PRUEBA BRAZO 2.STL" scale="0.003 0.003 0.003"/>
    <mesh name="Brazo2" file="brazo2C.STL" scale= "0.005 0.005 0.005"/>
  </asset>

  <option gravity="0 0 -9.81"/>

  <worldbody>
    <light diffuse="0 0 0" pos="0 0 10" dir="0 0 -1"/>
    <body pos="0 0 0" euler="0 180 0">
      <joint name="joint0" type="hinge" axis="0 1.2 0" pos="0.1 0 0.98" damping = "0.02" />
      <geom type="mesh" mesh="Brazop" rgba="1 0 1 1" mass="1" />
      <body pos="0 -0.1 -0.9" euler="0 0 0">
       <joint name="joint1" type="hinge" axis="0 1.2 0" pos="0.1 0 0.98" damping = "0.02"/>
       <geom type="mesh" mesh="Brazop" rgba="0 1 0 1" mass="1"/>
      </body>
    </body>
  </worldbody>

  <actuator>

    <motor name="torque0" joint="joint0" gear="1"/>
    <motor name="torque1" joint="joint1" gear="1"/>
  </actuator>
</mujoco>